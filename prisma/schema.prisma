generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  
  userId    String
  username  String
  userImage String

  guideId   String

  // YENİ ÖZELLİK: Onay sistemi
  isApproved Boolean @default(false)
}